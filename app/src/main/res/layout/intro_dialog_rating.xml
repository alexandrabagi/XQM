<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_delete"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:alpha="1.0"
        android:src="@drawable/ic_action_minus_grey"
        app:layout_constraintBottom_toBottomOf="@+id/icon_home"
        app:layout_constraintEnd_toStartOf="@+id/icon_home"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/icon_home"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:alpha="1.0"
        android:foregroundTintMode="multiply"
        android:src="@drawable/ic_home_blue"
        app:layout_constraintBottom_toTopOf="@+id/start_over_what"
        app:layout_constraintEnd_toStartOf="@+id/icon_positive"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/icon_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_positive"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:alpha="1.0"
        android:src="@drawable/ic_action_plus_grey"
        app:layout_constraintBottom_toBottomOf="@+id/icon_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/icon_home" />

    <TextView
        android:id="@+id/start_over_what"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:padding="20dp"
        android:text="@string/intro_rating_text"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_home" />

</android.support.constraint.ConstraintLayout>